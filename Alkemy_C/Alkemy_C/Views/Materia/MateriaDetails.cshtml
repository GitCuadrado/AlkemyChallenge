@model Alkemy_C.Models.EF_Models.Subject

@{
    ViewBag.Title = "MateriaDetails";
}

    <div class="HomeFeed details">
        
        
        <div class="materiaDetails__container">
            <h2>Materia Details</h2>
            <div>
                <dl class="row">

                    <dt class="col-sm-6">
                    Nombre
                    </dt>
                    <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt class="col-sm-6">
                    Cupos Disp.
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.places)
                    </dd>
                </dl>

            </div>
            <div class="materiaDetails__container__tablecontainer">
                <h2>Horarios</h2>
                <table class="table table-hover">
                    <tr class="head-blue">
                        <th>
                            Dia
                        </th>
                        <th>
                            Hora inicio
                        </th>
                        <th>
                            Hora fin
                        </th>
                    </tr>

                    @foreach (var item in Model.Schedules.ToList())
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.day)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hr_start.Hour)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hr_end.Hour)
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <p>
                @if ((Alkemy_C.Models.EF_Models.Person)Session["Usuario"] is Alkemy_C.Models.EF_Models.Alumn)
                {
                    @Html.ActionLink("Inscribirse", "Inscribirse", "Materia", new { Id = Model.Id }, new { @class = "btn btn-default" })
                }
                @Html.ActionLink("Volver", "Materias", new { area = "" }, new { @class = "btnDefault" })

            </p>
            @ViewBag.status

        </div>
       
    </div>
